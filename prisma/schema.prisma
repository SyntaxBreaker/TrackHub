// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  deadline     String
  authorId     String
  authorName   String
  authorAvatar String
  Project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String    @db.ObjectId
  status       Status    @default(IN_PROGRESS)
  priority     Priority  @default(LOW)
  comments     Comment[]
  assignedUser String?
  duration     Int       @default(0)
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  creator     String
  assignees   String[]
  tasks       Task[]
  chat        Chat[]
}

model Comment {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  authorId     String
  authorName   String
  authorAvatar String
  text         String
  Task         Task?   @relation(fields: [taskId], references: [id])
  taskId       String? @db.ObjectId
}

model Chat {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  Project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String    @db.ObjectId
  messages  Message[]
}

model Message {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  authorId     String
  authorName   String
  authorAvatar String
  text         String
  chat         Chat   @relation(fields: [chatId], references: [id])
  chatId       String @db.ObjectId
}

enum Status {
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
